@model IEnumerable<ServiceAuto.Models.Car>

@{
    ViewData["Title"] = "Index";
}

<h1>Cars</h1>

<p>
    <a asp-action="Create" class="button-stef">Add New Car</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CarBrand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarModel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarProductYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CarBrand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarModel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarProductYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarPrice)
            </td>
            <td>
                    <div class="btn-group-vertical">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn button-stef">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn button-stef">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn button-stef">Delete</a>
                        <a asp-action="Buy" asp-route-id="@item.Id" class="btn button-stef">Buy</a>
                    </div>
            </td>
        </tr>
}
    </tbody>
</table>
