@model IEnumerable<ServiceAuto.Models.ExpenseReport>

@{
    ViewData["Title"] = "Index";
}

<h1>Expense Reports</h1>

<p>
    <a asp-action="Create" class="button-stef">Add New Report</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ExpenseReportExpense)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpenseReportIncome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpenseReportProfit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ExpenseReportExpense)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpenseReportIncome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpenseReportProfit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceId)
            </td>
            <td>
                <div class="btn-group-vertical">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="button-stef">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="button-stef">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="button-stef">Delete</a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
