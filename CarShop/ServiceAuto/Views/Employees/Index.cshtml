@model IEnumerable<ServiceAuto.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Employees</h1>

<p>
    <a asp-action="Create" class="button-stef">Add New Employee</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeAge)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeSalary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeServiceName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeAge)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeSalary)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeServiceName)
                </td>
            <td>
                <div class="btn-group-vertical">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="button-stef">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="button-stef">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="button-stef">Delete</a>
                </div>         
            </td>
        </tr>
}
    </tbody>
</table>
