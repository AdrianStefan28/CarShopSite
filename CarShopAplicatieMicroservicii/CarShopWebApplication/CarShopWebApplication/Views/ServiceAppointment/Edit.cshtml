@model CarShopWebApplication.Models.ServiceAppointment

@{
    ViewData["Title"] = "Edit Service Appointment";
}

<h1>Edit Service Appointment</h1>

<form method="post">
    <div class="mb-3">
        <label for="CarId" class="form-label">Car ID</label>
        <input type="number" class="form-control" id="CarId" name="CarId" value="@Model.CarId" required>
    </div>
    <div class="mb-3">
        <label for="AppointmentDate" class="form-label">Appointment Date</label>
        <!-- Folosim ToString pentru un DateTime normal -->
        <input type="datetime-local" class="form-control" id="AppointmentDate" name="AppointmentDate"
               value="@Model.AppointmentDate.ToString("yyyy-MM-ddTHH:mm")" required>
    </div>
    <div class="mb-3">
        <label for="ServiceDescription" class="form-label">Service Description</label>
        <textarea class="form-control" id="ServiceDescription" name="ServiceDescription" required>@Model.ServiceDescription</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

<a href="@Url.Action("Index", "ServiceAppointment")" class="btn btn-secondary">Back to Appointments</a>
