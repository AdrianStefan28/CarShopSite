@model CarShopWebApplication.Models.Contact

@{
    ViewData["Title"] = "Create Contact";
}

<h1>Create Contact</h1>

<form method="post">
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">
            @ViewBag.ErrorMessage
        </div>
    }

    <div class="mb-3">
        <label for="Name" class="form-label">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model?.Name" required>
    </div>

    <div class="mb-3">
        <label for="Email" class="form-label">Email</label>
        <input type="email" class="form-control" id="Email" name="Email" value="@Model?.Email" required>
    </div>

    <div class="mb-3">
        <label for="Message" class="form-label">Message</label>
        <textarea class="form-control" id="Message" name="Message" required>@Model?.Message</textarea>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

<a href="@Url.Action("Index", "Contact")" class="btn btn-secondary">Back to Contacts</a>
